<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".screenafterlogin">

    <TextView
        android:id="@+id/booked"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:editable="false"
        android:fontFamily="casual"
        android:gravity="top"
        android:inputType="textPersonName"
        android:text="Book-ed!"
        android:textColor="#FF327C"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/shelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booked"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-black"
        android:text="ONE SHELF FOR ALL"
        android:textColor="#0AECFB"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/button"
        android:layout_marginLeft="20dp"
        android:layout_width="415dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:editable="true"
        android:fadeScrollbars="true"
        android:gravity="top"
        android:hint="search by books,authors or address"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="#FF327C"
        android:textSize="19sp"
        android:layout_below="@id/shelf"
        android:layout_marginTop="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below ="@+id/button"
            android:layout_marginTop="220dp"
            android:clickable="true"
            android:id="@+id/top"
            android:text="TOP FOR YOU:"
            android:textColor="#0AECFB"
            android:textSize="32sp"
            android:fontFamily="sans-serif-black"
            />

        <Button
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginTop="30dp"
            android:text="TWO STATES\nAUTHOR:CHETAN BHAGAT\n"
            android:textColor="#FF327C"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:clickable="true"
            />

        <Button
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginTop="30dp"
            android:text="CALCULUS@IITB\nAUTHOR:SUDHIR GHORPADE\n"
            android:textColor="#FF327C"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:clickable="true"
            />

        <Button
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginTop="30dp"
            android:text="EE101\nAUTHOR:B.G.FERNANDES  \n"
            android:textColor="#FF327C"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:clickable="true"
            />

        <Button
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginTop="30dp"
            android:text="BB101 NOTES\nAUTHOR:SAHIL AGARWAL\n"
            android:textColor="#FF327C"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:clickable="true"
            />

        <Button
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_marginTop="30dp"
            android:text="CH117 FILE\nAUTHOR:BHAVESH DHINGRA\n"
            android:textColor="#FF327C"
            android:textSize="16sp"
            android:background="#FFFFFF"
            android:clickable="true"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF327C"
            android:layout_weight="30"
            android:text="HOME"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:clickable="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF327C"
            android:layout_weight="60"
            android:text="MY EXCHANGES"
            android:layout_marginLeft="2dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:clickable="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF327C"
            android:layout_weight="30"
            android:text="LOGOUT"
            android:layout_marginLeft="2dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:clickable="true"
            android:id="@+id/logout"
            />






    </LinearLayout>

</RelativeLayout>