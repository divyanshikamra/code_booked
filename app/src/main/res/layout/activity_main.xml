<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/address"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="293dp"
        android:background="#FF327C"
        android:clickable="true"
        android:editable="true"
        android:fadeScrollbars="true"
        android:gravity="top"
        android:hint="NAME"
        android:includeFontPadding="true"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/college"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_below="@+id/address"
        android:layout_alignLeft="@+id/address"
        android:layout_alignRight="@+id/address"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="88dp"
        android:layout_marginRight="-2dp"
        android:background="#FF327C"
        android:clickable="true"
        android:editable="true"
        android:fadeScrollbars="true"
        android:gravity="top"
        android:hint="COLLEGE/UNIVERSITY"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/occupation"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_below="@+id/college"
        android:layout_alignLeft="@+id/college"
        android:layout_alignRight="@+id/college"
        android:layout_marginLeft="-3dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="3dp"
        android:background="#FF327C"
        android:clickable="true"
        android:editable="true"
        android:fadeScrollbars="true"
        android:gravity="top"
        android:hint="PASSWORD"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="43dp"
        android:layout_below="@+id/address"
        android:layout_alignLeft="@+id/address"
        android:layout_alignRight="@+id/address"
        android:layout_marginTop="25sp"
        android:background="#FF327C"
        android:clickable="true"
        android:editable="true"
        android:fadeScrollbars="true"
        android:gravity="top"
        android:hint="RESIDENTIAL ADDRESS"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColor="#FFFFFF"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/booked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textPersonName"
        android:text="Book-ed!"
        android:textColor="#FF327C"
        android:textSize="50sp"
        android:fontFamily="casual"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="239dp"
        />




   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALREADY REGISTERED?"
        android:textColor="#000000"
        android:layout_below="@+id/signup"
        android:layout_marginTop="45dp"
        android:textSize="22sp"
        android:id="@+id/already"
        />


    <TextView
        android:id="@+id/shelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booked"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="ONE SHELF FOR ALL"
        android:fontFamily="sans-serif-black"
        android:textColor="#0AECFB"
        android:textSize="30sp"
        app:fontFamily="monospace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/already"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#0AECFB"
        android:clickable="true"
        android:onClick="@android:string/ok"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/occupation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#0AECFB"
        android:clickable="true"
        android:onClick="@android:string/ok"
        android:text="SIGNUP"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:id="@+id/signup"/>


</RelativeLayout>